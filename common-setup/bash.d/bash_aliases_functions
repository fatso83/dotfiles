fi

t_debug Add custom ignore pattern for GNU ls
IGNORE=""
if ! is_mac; then
  #ignore patterns
  for i in '*~' '*.pyc'; do 
      IGNORE="$IGNORE --ignore=$i"
  done
fi

alias ls="/bin/ls $IGNORE "

